    "openapi": "deno run -A scripts/generate_openapi_types.ts && deno fmt && deno lint"
  },
  "fmt": {
    "semiColons": false,
    "lineWidth": 30
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-namespace",
        "no-explicit-any"
      ]
    }
  },
  "imports": {
    "@nik-kita/brickyard": "jsr:@nik-kita/brickyard@^0.3.1",
    "@std/dotenv": "jsr:@std/dotenv@^0.224.2",
    "xstate": "https://esm.sh/xstate@5.14.0/dist/xstate.esm.js"
  }
}
